#:import hex kivy.utils.get_color_from_hex
<FlatButton@ButtonBehavior+Label>:
    font_size:14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: hex('#336699')
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'A3 Pos system'
            size_hint_x: .9
            bold: True
            color: (1,1,1,1)
        
        FlatButton:
            id: loggedin_user
            text: 'A3'
            color: (1,1,1,1)
            size_hint_x: .1
            underline: True
            on_release: root.logout()
    
    BoxLayout:
        id:current
        size_hint_y:None
        height:50
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text:'Current Item'
            background_normal:''
            background_color:(0.06,0.45,0.45,1)
            size_hint_x:.4
        Button:
            id: cur_product
            text: 'Default Product'
            background_color:(0.06,0.62,0.62,1)
            size_hint_x:.4
        Button:
            id: cur_price
            text: '0.00'
            background_color:(0.06,0.8,0.8,1)
            size_hint_x:.2

    BoxLayout:
        padding:10
        BoxLayout:
            id: prd_details
            orientation:'vertical'
            size_hint_x:.8
            spacing:10
            BoxLayout:
                id: product_labels
                size_hint_y : None
                height: 40
                canvas.before:
                    Color: 
                        rgba:(.06,.45,.45,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text:'Qty'
                    size_hint_x:.1
                FlatButton:
                    text:'Prd Code'
                    size_hint_x:.3
                FlatButton:
                    text:'Disc'
                    size_hint_x:.1
                FlatButton:
                    text:'Disc %'
                    size_hint_x:.1
                FlatButton:
                    text:'VAT'
                    size_hint_x:.1
                FlatButton:
                    text:'Price'
                    size_hint_x:.1
                FlatButton:
                    text:'Prd Total'
                    size_hint_x:.2       
            
            BoxLayout:            
                id: prd_inputs
                size_hint_y:None
                height: 30
                spacing: 5
                TextInput:
                    id:qty_input
                    size_hint_x:.1
                    multiline:False
                TextInput:
                    id:code_input
                    size_hint_x:.3
                    multiline:False
                    on_text_validate: root.update_purchase()
                TextInput:
                    id:disc_input
                    size_hint_x:.1
                    multiline:False
                TextInput:
                    id:disc_perc_input
                    size_hint_x:.1
                    multiline:False
                TextInput:
                    id:VAT_input
                    size_hint_x:.1
                TextInput:
                    id:price_input
                    size_hint_x:.1
                TextInput:
                    id:total_input
                    size_hint_x:.2

            BoxLayout:
                id: add_to_cart
                orientation:'vertical'
                BoxLayout:                    
                    size_hint_y : None
                    height: 30
                    spacing:10
                    canvas.before:
                        Color: 
                            rgba:(.06,.45,.45,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos                    
                    Label:
                        text:'Prd Code'
                        size_hint_x:.2
                    Label:
                        text:'Prd Name'
                        size_hint_x:.3
                    Label:
                        text:'Qty'
                        size_hint_x:.1
                    Label:
                        text:'Disc'
                        size_hint_x:.1
                    Label:
                        text:'Price'
                        size_hint_x:.1
                    Label:
                        text:'Prd Total'
                        size_hint_x:.2
                GridLayout:
                    id:products
                    cols:1
                    


        BoxLayout:
            id:preview
            orientation: 'vertical'
            size_hint_x: .2

            TextInput:
                id:receipt_preview
                readonly: True
                text:'The Collector\n123 Street\nKnowhere, Space\n\nTel: (935) 770-998\nReceipt No.:\nDate: \n\n'
    BoxLayout:
        id: footer
        size_hint_y:None
        height:30
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Maintained by A3'


